import { PluginWithOptions } from 'markdown-it';

interface MarkdownItTaskListOptions {
    /**
     * Whether disable checkbox
     *
     * 是否禁用 checkbox
     *
     * @default true
     */
    disabled?: boolean;
    /**
     * Whether use `<label>` to wrap text
     *
     * 是否使用 `<label>` 来包裹文字
     *
     * @default true
     */
    label?: boolean;
}

/**
 * Forked from https://github.com/linsir/markdown-it-task-checkbox/blob/master/index.js
 */

declare const tasklist: PluginWithOptions<MarkdownItTaskListOptions>;

interface TaskListEnv {
    tasklists: number;
}

export { MarkdownItTaskListOptions, TaskListEnv, tasklist };
